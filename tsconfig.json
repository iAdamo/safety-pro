{
  "compilerOptions": {
    "strict": true,
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2021",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "paths": {
      "@config/*": ["src/config/*"],
      "@modules/*": ["src/modules/users/*", "src/modules/map/*"],
      "@schemas/*": ["src/modules/users/schemas/*", "src/modules/map/schemas/*"],
      "@dto/*": ["src/modules/users/v1/user/dto/*", "src/modules/map/v1/map/dto/*"],
      "@controllers/*": ["src/modules/users/v1/user/*", "src/modules/map/v1/map/*"],
      "@services/*": ["src/modules/users/v1/user/*", "src/modules/map/v1/map/*"],
    },
    "incremental": true,
    "skipLibCheck": true,
    "strictNullChecks": false,
    "noImplicitAny": false,
    "strictBindCallApply": false,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": false
  }
}
